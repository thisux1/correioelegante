extends layout.pug

block content
  .container
    form#messageForm(action="/create" method="POST")
      .form-group
        label(for="message") Mensagem:
        textarea#message(name="message" rows="5" placeholder="Digite sua mensagem..." required)
      .form-group
        label(for="recipient") Destinatário:
        input#recipient(type="text" name="recipient" placeholder="Nome e sala do destinatário")
      .form-group
        label(for="media") Adicionar mídia (foto ou música):
        input#media(type="file" name="media" accept="image/*,audio/*")
      .placeholder-theme
        p Escolher Tema (Em breve...)
      button#previewBtn(type="button") Visualizar Prévia

    #previewArea.hidden
      h2 Prévia da Mensagem
      .preview-content
        p#previewMessage
        p#previewRecipient
      .theme-selector
        label Escolha um tema:
        select#themeSelector
          option(value="theme1") Tema 1
          option(value="theme2") Tema 2
          option(value="theme3") Tema 3
      button#confirmBtn Pronto

    #loginModal.hidden
      .modal-content
        h3 Acesse ou Cadastre-se
        form#authForm(action="/auth" method="POST")
          input(type="text" name="identifier" placeholder="E-mail ou Usuário" required)
          input(type="password" name="password" placeholder="Senha" required)
          button(type="submit") Continuar

block scripts
  script(src="/js/create.js")
