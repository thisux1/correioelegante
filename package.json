{
  "name": "correio-elegante",
  "version": "1.0.0",
  "scripts": {
    "start": "node src/server.js",
    "build-css": "sass scss/main.scss public/css/main.css",
    "watch-css": "sass --watch scss/main.scss:public/css/main.css",
    "dev": "npm run build-css && concurrently \"npm run watch-css\" \"npm run start\""
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "helmet": "^8.0.0",
    "mercadopago": "^2.3.0",
    "mongoose": "^6.13.8",
    "multer": "^1.4.5-lts.1",
    "pug": "^3.0.2",
    "qrcode": "^1.5.4",
    "shortid": "^2.2.17"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.22",
    "sass": "^1.58.0"
  }
}
