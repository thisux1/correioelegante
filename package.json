{
  "name": "correio-elegante",
  "version": "1.0.0",
  "scripts": {
    "start": "nodemon src/server.js",
    "build-css": "sass scss/main.scss public/css/main.css",
    "watch-css": "sass --watch scss/main.scss:public/css/main.css",
    "dev": "npm run build-css && concurrently \"npm run watch-css\" \"npm run start\""
  },
  "dependencies": {
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "mongoose": "^6.13.8",
    "multer": "^1.4.5-lts.1",
    "pug": "^3.0.2",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.22",
    "sass": "^1.58.0"
  }
}
